<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".PomodoroApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppPomodoro"
        tools:targetApi="31">

        <!-- Login Activity como main launcher -->
        <activity
            android:name=".activities.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.AppPomodoro.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Boas Vindas Activity -->
        <activity
            android:name=".activities.BoasVindasActivity"
            android:exported="false"
            android:theme="@style/Theme.AppPomodoro.NoActionBar" />

        <!-- Cadastro Activity -->
        <activity
            android:name=".activities.CadastroActivity"
            android:exported="false"
            android:theme="@style/Theme.AppPomodoro.NoActionBar" />

        <!-- Tela Principal Activity -->
        <activity
            android:name=".activities.TelaPrincipalActivity"
            android:exported="false"
            android:parentActivityName=".activities.BoasVindasActivity" />

        <!-- Cronômetro Activity -->
        <activity
            android:name=".activities.CronometroActivity"
            android:exported="false"
            android:parentActivityName=".activities.TelaPrincipalActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />

        <!-- Histórico Activity -->
        <activity
            android:name=".activities.HistoricoActivity"
            android:exported="false"
            android:parentActivityName=".activities.TelaPrincipalActivity" />

        <!-- Estatísticas Activity -->
        <activity
            android:name=".activities.EstatisticasActivity"
            android:exported="false"
            android:parentActivityName=".activities.TelaPrincipalActivity" />

        <!-- Disciplinas Activity -->
        <activity
            android:name=".activities.GerenciarDisciplinasActivity"
            android:exported="false"
            android:parentActivityName=".activities.TelaPrincipalActivity" />

        <!-- Recomendações Activity -->
        <activity
            android:name=".activities.RecomendacoesActivity"
            android:exported="false"
            android:parentActivityName=".activities.TelaPrincipalActivity" />

        <!-- New Cronometro Activity -->
        <activity
            android:name=".activities.NewCronometroActivity"
            android:exported="false"
            android:parentActivityName=".activities.TelaPrincipalActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />

        <!-- Editar Disciplina Activity -->
        <activity
            android:name=".activities.EditarDisciplinaActivity"
            android:exported="false"
            android:parentActivityName=".activities.GerenciarDisciplinasActivity" />

        <!-- Receiver para notificações -->
        <receiver android:name=".utils.AlarmReceiver" android:exported="true" />

        <!-- Firebase Messaging metadata -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="@string/notification_channel_id" />

    </application>

</manifest>