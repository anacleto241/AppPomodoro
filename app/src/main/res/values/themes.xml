<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for light mode -->
    <style name="Base.Theme.AppPomodoro" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Light theme customizations -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        
        <!-- Background colors -->
        <item name="android:windowBackground">@color/background</item>
        <item name="android:colorBackground">@color/background</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>
        <item name="android:textColorHint">@color/textHint</item>
        
        <!-- Status bar and navigation bar -->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">true</item>
        
        <!-- Surface colors for cards, etc -->
        <item name="colorSurface">@color/cardBackground</item>
        <item name="colorOnSurface">@color/textPrimary</item>
        
        <!-- Material components colors -->
        <item name="colorOnPrimary">@color/textOnPrimary</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/textOnPrimary</item>
        
        <!-- Component styles -->
        <item name="materialButtonStyle">@style/Widget.App.Button.Primary</item>
        <item name="materialCardViewStyle">@style/Widget.App.CardView</item>
        <item name="toolbarStyle">@style/Widget.App.Toolbar</item>
        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>
    </style>

    <style name="Theme.AppPomodoro" parent="Base.Theme.AppPomodoro" />
    
    <!-- Theme without ActionBar for activities that manage their own toolbar -->
    <style name="Theme.AppPomodoro.NoActionBar" parent="Theme.AppPomodoro">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <!-- Launcher theme for light mode -->
    <style name="Theme.AppPomodoro.Launcher" parent="Theme.AppPomodoro">
        <item name="android:windowSplashScreenBackground">@color/colorPrimary</item>
        <item name="android:windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
    </style>
</resources>