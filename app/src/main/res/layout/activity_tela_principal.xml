<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/backgroundLight">

    <!-- TextView no topo -->
    <TextView
        android:id="@+id/textViewCiclosConcluidos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Ciclos concluídos: 0"
        android:textSize="18sp"
        android:textColor="@color/textPrimary"/>

    <!-- Botão principal centralizado -->
    <Button
        android:id="@+id/buttonIniciarCiclo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Iniciar Ciclo de 25min"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@color/white"/>

    <!-- Botão de histórico na parte inferior -->
    <Button
        android:id="@+id/buttonVerHistorico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="16dp"
        android:layout_below="@id/buttonIniciarCiclo"
        android:text="Ver Histórico"
        android:backgroundTint="@color/colorAccent"
        android:textColor="@color/white"/>

</RelativeLayout>