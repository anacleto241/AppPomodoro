<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center_vertical">

    <!-- Ícone da disciplina -->
    <ImageView
        android:id="@+id/iconeDisciplina"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/ic_school"
        app:tint="@color/colorPrimary" />

    <!-- Informações da disciplina -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewNomeDisciplina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome da Disciplina"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/focus_text_color"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/textViewDetalhes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ciclos: 0 • Última sessão: Nunca"
            android:textSize="12sp"
            android:textColor="@color/focus_text_color"
            android:alpha="0.7"
            android:maxLines="1"
            android:ellipsize="end" />

    </LinearLayout>

    <!-- Tempo estudado -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end">

        <TextView
            android:id="@+id/textViewTempoEstudado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2h 30min"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/textViewPercentual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="45%"
            android:textSize="12sp"
            android:textColor="@color/focus_text_color"
            android:alpha="0.7" />

    </LinearLayout>

    <!-- Barra de progresso -->
    <View
        android:id="@+id/viewBarraProgresso"
        android:layout_width="4dp"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:background="@color/colorPrimary"
        android:alpha="0.3" />

</LinearLayout>
